        //查询
        $("#Check").click(function () {
            $('#formCheckVehicleInformation').resetForm();
            $("#modCheckExaminee").modal("show");
            $("#modelcheck").click(function () {
                CheckVehicleInfo(); //多条件查询方法
                $("#modCheckExaminee").modal("hide");
            })
        })
        //查询条件
        function CheckVehicleInfo() {
            var ChauffeurID = $("#ChauffeurCheck").val();
            if (ChauffeurID == "" || ChauffeurID == null) {
                ChauffeurID = 0;
            }
            var MessageID = $("#ChineseCheck").val();
            if (MessageID == "" || MessageID == null) {
                MessageID = 0;
            }
            var VehicleCode = $("#VehicleCodeCheck").val();
            if (VehicleCode == null || VehicleCode == undefined) {
                VehicleCode = 0;
            }
            var VehicleClass = $("#VehicleClassCheck").val();
            if (VehicleClass == null || VehicleClass == undefined) {
                VehicleClass = 0;
            }
            var BracketID = $("#BracketCheck").val();
            if (BracketID == "" || BracketID == null) {
                BracketID = 0;
            }
            var VehicleType = $("#VehicleTypeCheck").val();
            if (VehicleType == null || VehicleType == undefined) {
                VehicleType = 0;
            }
            tabVehicleInformation.search({ ChauffeurID: ChauffeurID, MessageID: MessageID, VehicleCode: VehicleCode, VehicleClass: VehicleClass, BracketID: BracketID, VehicleType: VehicleType });
        }
        //新增
        $("#Insert").click(function () {
            $('#formInsert').resetForm();
            $("#modInsertExaminee").modal("show");
        });
        $("#Savevehicle").click(function () {
            var ChauffeurID = $('#formInsert [name="ChauffeurID"]').val();
