            appendOption("ChineseCheck", "selecttmMessage");
            appendOption("BracketCheck", "selectbracket");
            //查询车辆表
            tabVehicleInformation = $.fn.bsgrid.init('vehicleInformation', {
                url: 'selectVehicleInformation',
                autoLoad: true,//自动加载数据
                stripeRows: true,//隔行变色
                rowHoverColor: true,//划过行变色
                displayBlankRows: true,//是否显示空白行，默认值false
                rowSelectedColor: true,//是否显示选中行背景色
                pageSize: 10,//默认页面大小
                pageSizeSelect: true,//是否选择分页页数下拉框
                pagingLittleToolbar: true,//精简的图标按钮分页工具条
                //事件
                event: {
                    customRowEvents: {//自定义行事件
                        //(record行记录值,rowIndex行索引值,trObj:tr目标,options选择的东西)
                        click: function (record, rowIndex, trObj, options) {
                            Check("#vehicleInformation tr", rowIndex + 1);
